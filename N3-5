#include <stdio.h>
#include<stdlib.h>
#include<unistd.h>
#define MAX 100
#define N 20

int main(void) {
   
	srand(getpid());
	
    int A[N];
	int e;
	int igual=0;
	
	for(int i=0; i<N; i++) {
		   A[i]=rand()%(MAX+1);
	}
	
	printf("\nDado el siguiente array  A de %d elementos: \n \n", N);
	for(int i=0; i<N; i++) {
	    printf("%3.d ",A[i]);
	}
	
	printf("\nIngrese un numero entero entre [0,%d] para conocer si aparece en el array: ", MAX);
	scanf("%d", &e);
	if ((e>MAX) || (e<0)){
		do {
			printf("\nEl numero debe ser mayor que 0 y menor que %d.\nIngrese nuevamente: ", MAX);
			scanf("%d", &e);
		} while((e>MAX) || (e<0));
	}
	for(int i=0; i<N; i++) {
		if ( A[i]==e ) {
			igual +=1;
		}
	}
	if (igual==0) 
	    printf("\nEl numero %d NO aparece en el array A", e);
	else if (igual==1)
		printf("\nÂºEl numero %d aparece en el array  A una vez", e);
	else 
		printf("\nEl numero %d aparecen en el array A %d veces", e, igual);

	return 0;
}
