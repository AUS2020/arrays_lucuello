#include <stdio.h>
#define M 3
#define N 4

int main(void) {
    int A[M][N];	
	printf("Ingrese los valores para formar una matriz de dimension %d x %d\n", M, N);
	
	for(int i=0; i<M; i++) {
	   for(int j=0; j<N; j++) {
		   printf("Ingrese el valor de la fila %d, columna %d = ",i+1,j+1);
		   scanf("%d",&A[i][j]);
	   }
	}
	printf("\nLa matriz ingresada de dimension %d x %d es: \n", M, N);
	for(int i=0; i<M; i++) {
		for(int j=0; j<N; j++) {
	    printf("%2.d ",A[i][j]);
	}
	printf("\n");
	}
	
	
	return 0;
}
